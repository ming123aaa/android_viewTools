<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#aa000000"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_process_clickView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:minHeight="30dp"
        android:textColor="#fff"
        android:textIsSelectable="true"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lastNode_clickView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="30dp"
            android:text="上一个"
            android:textColor="#fff"

            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_openInLayout_clickView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="30dp"
            android:text="查看布局"
            android:textColor="#fff"

            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_nextNode_clickView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="30dp"
            android:text="下一个"
            android:textColor="#fff"

            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_viewName_clickView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:minHeight="30dp"
        android:textColor="#fff"
        android:textIsSelectable="true"
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_close_clickView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="30dp"
            android:text="关闭"
            android:textColor="#fff"

            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_show_clickView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="30dp"
            android:text="查看"
            android:textColor="#fff"

            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>
