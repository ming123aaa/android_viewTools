<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:tag="tv_close_xposed_viewTree_xposed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="关闭"
            android:textColor="#fff"
            android:textSize="18dp" />

        <TextView
            android:tag="tv_show_viewTree_xposed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="查看"
            android:textColor="#fff"
            android:textSize="18dp" />
    </LinearLayout>

    <HorizontalScrollView
        android:tag="hs_parentList_viewTree_xposed"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:tag="ll_parentList_viewTree_xposed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
             />
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:tag="tv_parentNode_viewTree_xposed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="查看父布局"
            android:textColor="#fff"
            android:textSize="18dp" />

        <TextView
            android:tag="tv_childNode_viewTree_xposed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="查看子布局"
            android:textColor="#fff"
            android:textSize="18dp" />
    </LinearLayout>

    <ListView
        android:tag="listView_viewTree_xposed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>