<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#aa000000"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:minHeight="40dp"
        android:tag="tv_close_xposed_class"
        android:text="关闭"
        android:textColor="#fff"
        android:textSize="18dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="40dp"
        android:text="class信息"
        android:textColor="#fff"
        android:textSize="18dp"
        android:tag="tv_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_weight="1"
            android:button="@null"
            android:tag="cb_listState"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="40dp"
            android:tag="tv_tostring"
            android:text="toString()"
            android:textColor="#fff"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_weight="1"
            android:background="#aa000000"
            android:textColorHint="#aaa"
            android:tag="edit_search"
            android:hint="多条件使用+号隔开"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:textColor="#fff"
            android:text="搜索"
            android:gravity="center"
            android:textSize="18dp"
            android:tag="btn_search"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:tag="list_close_xposed_class" />


</LinearLayout>